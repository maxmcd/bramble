load(nix_seed="github.com/maxmcd/bramble/lib/nix-seed")


def simple():
    return derivation(
        name="simple",
        builder=nix_seed.stdenv().out + "/bin/bash",
        env={"stdenv": nix_seed.stdenv()},
        args=["./simple_builder.sh"],
        sources=["./simple.c", "simple_builder.sh"],
    )
