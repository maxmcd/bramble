load("github.com/maxmcd/bramble/tests/busybox")


def nested():
    bb = busybox.busybox()
    return [_nested1(bb), _nested2(bb), _nested3(bb)]


def _nested1(bb):
    return derivation(
        name="nested",
        env={"PATH": "%s/bin" % bb.out},
        builder="%s/bin/sh" % bb.out,
        sources=files(["../"], include_directories=True),
        args=["../script.sh"],
    )


def _nested2(bb):
    return derivation(
        name="nested2",
        builder="%s/bin/sh" % bb.out,
        env={"PATH": "%s/bin" % bb.out},
        sources=files(["../file.txt", "../script.sh"]),
        args=["../script.sh"],
    )


def _nested3(bb):
    return derivation(
        name="nested3",
        builder="%s/bin/sh" % bb.out,
        env={"PATH": "%s/bin" % bb.out},
        sources=files(["../script2.sh"]),
        args=["../script2.sh"],
    )
