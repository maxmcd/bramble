load("github.com/maxmcd/bramble/lib")


def hello():
    return derivation(
        name="zig",
        builder=lib.busybox().out + "/bin/sh",
        args=[
            "-c",
            """
            set -e
            time zig build-exe hello.zig
            ./hello
        """,
        ],
        sources=["./hello.zig"],
        env=dict(PATH=lib.busybox().out + "/bin:" + lib.zig().out + "/bin"),
    )
